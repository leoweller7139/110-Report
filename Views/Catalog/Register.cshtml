@{
    ViewData["Title"] = " Register Car";
}

<h1>Register your new car here!</h1>

<div class="form">

@* Html Code
    That displays asking for a make, entering inputs to recieve values
    To REGISTER CARS *@

<form>
    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label>Make</label>
            <input type="text" class="form-control" id="txtMake" placeholder="Ford" required>
        </div>
        <div class="col-md-6 mb-3">
            <label>Model</label>
            <input type="text" class="form-control" id="txtModel" placeholder="Mustang" required>
        </div>
        <div class="small col-md-6 mb-3">
            <label>Year</label>
            <input type="text" class="form-control" id="txtYear" placeholder="Year" required>
        </div>
        <div class="col-md-6 mb-3">
            <label>Price</label>
            <input type="text" class="form-control" id="txtPrice" placeholder="Price" required>
        </div>
        <div class="col-md-6 mb-3">
            <label>Cylinders</label>
            <input type="text" class="form-control" id="txtCyl" placeholder="Cylinders" required>
        </div>
        <div class="col-md-6 mb-3">
            <label>Passengers</label>
            <input type="text" class="form-control" id="txtPass" placeholder="Passengers" required>
        </div>
        <div class="col-md-6 mb-3">
            <label>Type</label>
            @* <input type="text" class="form-control" id="validationDefault02" placeholder="Type" required> *@
            <select class="form-control" id="txtType" required>
                <option>Economy</option>
                <option>Mid Luxury</option>
                <option>Luxury</option>
                <option>Sport</option>
                <option>Super Sport</option>
            </select>
        </div>
        <div class="col-md-6 mb-3">
            <label>ImageUrl</label>
            <input type="text" class="form-control" id="txtImage" placeholder="ImageURL" required>
        </div>
        <div class="col-md-6 mb-3">
            <label>MPG City</label>
            <input type="text" class="form-control" id="txtCity" placeholder="City" required>
        </div>
        <div class="col-md-6 mb-3">
            <label>MPG Highway</label>
            <input type="text" class="form-control" id="txtHigh" placeholder="Highway" required>
        </div>
        <div class="col-md-12 mb-10">
            <label>Description</label>
            <input type="text" class="form-control" id="txtDesc" placeholder="Description" required>
        </div>
    </div>

